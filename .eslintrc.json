{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": "./tsconfig.json" },
  "env": { "es2021": true },
  "ignorePatterns": ["node_modules", "build", "coverage"],
  "plugins": ["import"],
  "extends": [
    "airbnb-typescript"
  ],
  "rules": {
    "max-len": ["error", { "code": 120 }],
    "import/prefer-default-export": "off"
  }
}
